<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuang.swagger.mapper.UserMapper">
    <select id="queryUserList" resultType="User">
        select * from usertest
   </select>
    <select id="queryUserByid" resultType="User">
        select * from usertest where id=#{id}
    </select>
    <insert id="addUser" parameterType="User">
        insert into usertest(id,username,password) values (#{id},#{username},#{password})
    </insert>
    <update id="updateUser" parameterType="User">
        update usertest set username=#{username},password=#{password} where id =#{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        delete from usertest where id=#{id}
    </delete>
    <insert id="inserUser">
        insert usertest (id,username,password,phone) values (#{id},#{username},#{password},#{phone});
    </insert>
    <select id="selectUser" resultType="User">
        select * from usertest where id=#{id} and password=#{password}
    </select>
</mapper>